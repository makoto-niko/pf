<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= render "layouts/flash" %>
      <h2 class="mt-5">会員情報編集</h2>
      <%= form_with(model: @user, url: admin_user_path(@user), local: true) do |form| %>
          <table class="table">
            <tbody>
              <tr>
                <th class="nowrap">会員ID</th>
                <td><%= @user.id %></td>
              </tr>
              <tr>
                <th class="nowrap">ニックネーム</th>
                <td>
                  <div class="row g-3">
                    <div class="col-md-6"> 
                      <%= form.text_field :username, class: "form-control" %>
                    </div>
                  </div>
                </td>
              </tr>
              <tr>
                <th class="nowrap">会員ステータス</th>
                <td>
                  <div class="row g-3">
                    <div class="col">
                      <%= form.radio_button :is_active, true, id: "customer_is_active_true" %>
                      <%= form.label :is_active, "有効", value: true, for: "customer_is_active_true" %>
                      <%= form.radio_button :is_active, false, id: "customer_is_active_false" %>
                      <%= form.label :is_active, "退会", value: false, for: "customer_is_active_false" %>
                    </div>
                  </div>
                </td>
              </tr>
              <tr>
                <td></td>
                <td>
                  <input type="submit" name="commit" value="変更を保存" class="btn btn-success" data-disable-with="Update Book">
                </td>
              </tr>
            </tbody>
          </table>
      <% end %>
    </div>
  </div>
</div>
