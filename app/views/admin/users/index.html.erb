<div class="col-sm-9 col-md-7 col-lg-5 px-5 px-sm-0 mx-auto align-self-center text-start" style="margin-top: 50px; margin-bottom: 50px;">
<div class="container">
  <div class="row">
    <h3>会員一覧</h3>
    <table class= "table table-hover table-inverse">

      <thead>
        <tr>
        <th>会員ID</th>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to "#{user.username} ",admin_user_path(user.id) %></td>
          <td><%= user.email %></td>
          <td>
          <% if user.is_active %>
          <span class='text-success'>有効</span>
          <% else %>
          <span class='text-secondary'>退会</span>
      　   <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
      </table>
      <div class="d-flex justify-content-center" style="margin-top: 50px;">
      <%= paginate @users %>
      </div>
  </div>
</div>