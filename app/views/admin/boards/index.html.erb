<div class="container mt-5">
  <h3><%= @group.name %>の投稿一覧</h3>
    <table class="table">
      <tr>
        <th>名前</th>
        <th>投稿</th>
        <th>日時</th>
        <th></th>
      </tr>
        
      <% @board.each do |board| %>
      <tr>
         <td><%= board_post.user.name %></td>
         <td><%= board_post.description %></td>
         <td><%= board_post.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
         <td>
             <%= link_to '削除', admin_group_board_post_path(board_post.group_id, board_post), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-sm btn-danger" %>
         </td>
      </tr>
      <% end %>
    </table>
</div>
