<div class="container">
  <h3 class="row py-4">グループ編集</h3>

  <%= form_with model: @group, url: admin_group_path(@group), method: :patch do |f| %>
  
    <div class="row mt-2">
      <h4 class="col-3">グループ名:</h4>
      <div class="col-8"><%= f.text_field :name, size: 40, class: 'form-control' %></div>
    </div>
    
    <div class="row mt-2">
      <h4 class="col-3">説明:</h4>
      <div class="col-8"><%= f.text_area :explanation, size: "40x5", class: 'form-control' %></div>
    </div>
    
    <div class="row">
      <%= f.submit '更新', class: "btn btn-success mt-3" %>
    </div>
    
  <% end %>

</div>
