<div class="container mt-5">
  
  <h3 class="mb-5">グループ詳細画面</h3>
  
  <h4 class="row mb-3">
    <div class="col-3">グループ名:</div>
    <div class="col-9"><%= @group.name %></div>
  </h4>
  
  <h5 class="row mb-3">
    <div class="col-3">説明:</div>
    <div class="col-9"><%= @group.description %></div>
  </h5>
  
  <div class="row">
    <div class="col-4">
      <%= link_to '編集', edit_admin_group_path(@group), class: "btn btn-success mr-2" %>
      <%= link_to '削除', admin_group_path(@group), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-danger' %>
    </div>
  </div>

</div>

