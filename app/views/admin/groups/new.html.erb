<div class="container">
   <%= render 'layouts/flash_messages' %>
  <h3 class="row py-4">グループ作成</h3>
  <%= form_with model: @group, url: public_groups_path, local: true do |f| %>
    <div class="row mt-2">
      <h4 class="col-3">グループ名:</h4>
      <div class="col-8"><%= f.text_field :name, size: 40, class: 'form-control' %></div>
    </div>
    
    <div class="row mt-2">
      <h4 class="col-3">説明:</h4>
      <div class="col-8"><%= f.text_area :explanation, size: "40x5", class: 'form-control' %></div>
    </div>
    
    <div class="row">
      <%= f.submit '作成', class: "btn btn-success mt-3" %>
    </div>
    
    <td><%= link_to "削除", admin_group_path(group), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %></td>

  <% end %>
</div>
