<div class="container">
  <div class="row mt-5">
    <div class="col-12">
      <h2>Actions</h2>
      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">アクション</th>
            <th scope="col">リンク</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>タグリスト</td>
        <div class="row">
        <div class="col-md-8 offset-md-2">
            <%= form_with url: public_tags_url, method: :get do |f| %>
              <div class="row">
                <div class="col-sm-9 mb-2">
                  <%= f.search_field :keyword, class: "form-control" %>
                </div>
                <div class="col-sm-3">
                  <%= f.submit "search", class: "btn btn-primary btn-block" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
            <td><!--%= link_to 'Tags List', public_tags_path, class: "btn btn-primary" %--></td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Tag Section -->
    <div class="col-12 mt-4">
      <h2>Tag</h2>
      <h3><!--%= @tag.name %--></h3>
      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">掲示板タイトル</th>
            <th scope="col">リンク</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <% tag.boards.each do |board| %>
              <tr>
                <td><%= tag.name %></td>
                <td><%= board.title %></td>
                <td><%= link_to '掲示板へ', public_group_boards_path(board.group_id), class: "btn btn-link" %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

