<div class="container">
  <div class="row mt-5">
    <div class="col-12">
      <h2>Actions</h2>
      <!-- 検索フォーム -->
      <%= form_with url: public_tags_url, method: :get, class: "row" do |f| %>
        <div class="col-md-8 offset-md-2 mb-2">
          <%= f.search_field :keyword, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= f.submit "search", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- タグ検索結果 -->
  <div class="row mt-4">
    <div class="col-12">
      <h2>タグ検索結果</h2>
      <% if @tags.any? %>
        <ul>
          <% @tags.each do |tag| %>
            <li><%= tag.name %></li>
          <% end %>
        </ul>
      <% else %>
        <p>該当するタグが見つかりませんでした。</p>
      <% end %>
    </div>
  </div>

  <!-- 関連する掲示板 -->
  <div class="row mt-4">
    <div class="col-12">
      <h2>関連する掲示板</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">タグ</th>
            <th scope="col">掲示板タイトル</th>
            <th scope="col">リンク</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <% tag.boards.each do |board| %>
              <tr>
                <td><%= tag.name %></td>
                <td><%= board.title %></td>
                <td><%= link_to '掲示板へ', public_group_boards_path(board.group_id), class: "btn btn-link" %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


