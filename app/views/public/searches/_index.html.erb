<% if @model == 'user' %>
  <% if @records.size > 0 %>
    <h3>Users search for "<%= @content %>"</h3>
    
  <div class='row mt-5'>
    <h3>検索結果</h3>
    
    <table class="table mt-3">
      <thead>
        <tr>
          <th class="col-2">ユーザー名</th>
        </tr>
      </thead>
      <tbody>
        <% @records.each do |user| %>
          <tr>
            <td><%= user.username %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @records %>
  </div> 
  <% else %>
    <h3>Users no search </h3>
  <% end %>
<% end %>

