<% if user_signed_in? %>
  <%= form_with url: public_searches_path, method: :get, local: true do |f| %>
    <%= f.text_field :content, value: params[:content] %>
    <%= f.hidden_field :model, value: "user" %>
    <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}, params[:method]) %>
    <%= f.submit "検索" %>
  <% end %>
<% end %>