<div class="container">
  <div class='row mt-5'>
    <h3>会員一覧</h3>
    
    <table class="table mt-3">
      <thead>
        <tr>
          <th class="col-2">ユーザー名</th>
          <th class="col-3">メールアドレス</th>
          <th class="col-3">作成日</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>

