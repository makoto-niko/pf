<div class="container">
  <div class="row">
   <div class="mx-auto">
    <div>
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

     <%= render 'layouts/error_messages', model: @user %>
     
      <h4 class="my-5 text-center">会員情報編集</h4>
      <div>
       <%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>
        <div>
          <div class="text-center">ニックネーム</div>
          <div class="text-center"><%= f.text_field :username, class: "form-condivol" %></div>
        </div>

        <div>
          <div class="text-center">メールアドレス</div>
          <div class="text-center"><%= f.text_field :email, class: "form-condivol" %></div>
        </div>

        <div>
          <div class="text-center">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
          <div class="text-center">
            <%= link_to "退会する", unsubscribe_public_users_path, class: "btn btn-danger" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>