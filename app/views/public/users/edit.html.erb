<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">会員情報編集</h4>
      <table class="table table-borderless">
        <%= form_with model: [:public, @user], method: :patch do |f| %>
        <tr>
          <td>ユーザー名</td>
          <td><%= f.text_field :username %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
         <%= link_to "退会する", unsubscribe_public_users_path, class:"btn btn-danger" %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>