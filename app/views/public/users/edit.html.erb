<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= render 'layouts/flash' %>
      <%= render 'layouts/error_messages', model: @user %>
      
      <h4 class="my-5 text-center">会員情報編集</h4>
      <%= form_with model: @user, url: public_user_path(@user), method: :patch, local: true do |f| %>
        <div class="mb-5"> 
          <div class="text-center">ニックネーム</div>
          <div class="text-center"><%= f.text_field :username, class: "form-control" %></div>
        </div>

        <div class="mb-5"> 
          <div class="text-center">メールアドレス</div>
          <div class="text-center"><%= f.text_field :email, class: "form-control" %></div>
        </div>

        <div class="mb-5"> 
          <div class="text-center">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
          </div>
          <div class="text-center mt-2">
            <%= link_to "退会する", unsubscribe_public_users_path, class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

