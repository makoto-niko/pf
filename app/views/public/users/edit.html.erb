<div class="container">
  <div class="row">
   <div class="mx-auto">
    <div class="col-md-8">
      
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %>が原因でこの記事を保存できませんでした</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <h4 class="my-5 text-center">会員情報編集</h4>
      <table class="table table-borderless">
       <%= form_with model: @user, scope: :public, url: public_user_path(@user), method: :patch, local: true do |f| %>
        <tr>
          <td class="text-center">ニックネーム</td>
          <td class="text-center"><%= f.text_field :username, class: "form-control" %></td>
        </tr>

        <tr>
          <td class="text-center">メールアドレス</td>
          <td class="text-center"><%= f.text_field :email, class: "form-control" %></td>
        </tr>

        <tr>
          <td colspan="2" class="text-center">
            <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            <%= link_to "退会する", unsubscribe_public_users_path, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
</div>