<div class="col-sm-9 col-md-7 col-lg-5 px-5 px-sm-0 mx-auto align-self-center text-start" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="container">
      <div class="row">
        <div class="col">

          <h3 class="text-left md-4"><strong><%= @user.username %> </strong> さんの会員詳細</h3>
          
          <table class="table table-borderless">
            
            
            <tr>
              <th class="nowrap" style="font-size: 18px;">会員ID</th>
              <td style="font-size: 18px;"><%= @user.id %></td>
            </tr>

            <tr>
              <th class="nowrap" style="font-size: 18px;">ニックネーム</th>
              <td style="font-size: 18px;"><%= "#{@user.username}" %></td>
            </tr>
            
            <tr>
              <th class="nowrap" style="font-size: 18px;">メールアドレス</th>
              <td style="font-size: 18px;"><%= @user.email %></td>
            </tr>

            <tr>
              <th class="nowrap" style="font-size: 18px;">会員ステータス</th>
              <td style="font-size: 18px;">
                <% if @user.is_active %>
                <span class='text-success'>有効</span>
                <% else %>
                <span class='text-secondary'>退会</span>
                <% end %>
              </td>
            </tr>

            <tr>
              <th></th>
              <td><%= link_to '編集する', edit_public_user_path(@user.id), class: "btn btn-success" %></td>
            </tr>
            
          </table>
      </div> 
    </div>
  </div>
</div>  
