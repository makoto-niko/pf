<p id="notice"><%= notice %></p>

<h1>Board Posts</h1>

<table>
  <thead>
    <tr>
      <th>Board</th>
      <th>User</th>
      <th>Content</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @board_posts.each do |board_post| %>
      <tr>
        <td><%= board_post.board_id %></td>
        <td><%= board_post.user_id %></td>
        <td><%= board_post.content %></td>
        <td><%= board_post.created_at %></td>
        <td><%= board_post.updated_at %></td>
        <td><%= link_to 'Show', board_post %></td>
        <td><%= link_to 'Edit', edit_board_post_path(board_post) %></td>
        <td><%= link_to 'Destroy', board_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board Post', new_board_post_path %>
