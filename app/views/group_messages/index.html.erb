<p id="notice"><%= notice %></p>

<h1>Group Messages</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>User</th>
      <th>Content</th>
      <th>Sent at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_messages.each do |group_message| %>
      <tr>
        <td><%= group_message.group_id %></td>
        <td><%= group_message.user_id %></td>
        <td><%= group_message.content %></td>
        <td><%= group_message.sent_at %></td>
        <td><%= link_to 'Show', group_message %></td>
        <td><%= link_to 'Edit', edit_group_message_path(group_message) %></td>
        <td><%= link_to 'Destroy', group_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

