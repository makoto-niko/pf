<header>
  <div class="container">
    <%= link_to "Transconect", root_path, class: "navbar-brand" %>
      
    <% if admin_signed_in? %>
      <ul class="navbar-nav ml-auto">  
        <li class="nav-link text-light">
          <%= link_to admin_customers_path, class: "nav-link text-light" do %>
            <i class="fa-solid fa-users"></i> 会員一覧
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to root_path, class: "nav-link text-light" do %>
            <i class="fa-solid fa-file-alt"></i> 投稿一覧
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to admin_comments_path, class: "nav-link text-light" do %>
            <i class="fa-solid fa-comments"></i> コメント一覧
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to admin_groups_path, class: "nav-link text-light" do %>
            <i class="fa-solid fa-users"></i> グループ一覧
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do %>
