          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to new_user_session_path, class: "nav-link text-light" do %> 
            <i class="fa-solid fa-right-to-bracket"></i> ログイン
          <% end %>
        </li>
        <li class="nav-link text-light">
          <%= link_to new_admin_session_path, class: "nav-link text-light" do %>
            <i class="fa-solid fa-lock"></i> 管理者ログイン
          <% end %>
        </li>
      </ul>
    <% end %>
