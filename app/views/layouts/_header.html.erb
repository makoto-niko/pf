<header>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #add8e6;">
    <div class="container">
      <div class="d-flex align-items-center">
        <%= link_to root_path, class: "navbar-brand" do %>
          <!--%= image_tag("rainbow-logo.png", alt: "虹のロゴ", size: "100x100") %-->
        <% end %>
      </div>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to public_user_path(current_user), class: "nav-link text-light" do %>
                <i class="fa-solid fa-house"></i> マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to public_board_posts_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-book-open"></i> 掲示板一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to about_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-link"></i> About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-user-plus"></i> 新規登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                <i class="fa-solid fa-right-to-bracket"></i> ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>